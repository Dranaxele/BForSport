<!-- Inscription Form -->
<h2>Sign up</h2>
<div class="row">
<% form_for(@user) do |f| %>
  <div class="span9">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="contact-email">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="contact-message">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="contact-message">
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
    

<% end %>
  </div>
    